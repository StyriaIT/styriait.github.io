---
import { Image } from 'astro:assets';

import iconImg from '../assets/icon.svg'
---

<section class="my-20 mx-auto max-w-6xl">
    <div class="flex flex-col-reverse md:flex-row gap-3">
        <div class="flex-1">
            <h1 class="text-center text-4xl md:text-left lg:text-5xl">
                We provide digital transformation, custom software, and an expert crew that redefine your expectations.
            </h1>
        </div>
        <Image src={iconImg} alt="Styria hero" class="mx-auto flex-none max-w-sm" />
    </div>
</section>

<style>
    h1 {
        @apply leading-relaxed;
    }
</style>