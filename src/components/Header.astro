---
import { Icon } from 'astro-icon/components';
import Logo from './Logo.astro';
---

<nav class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4 bg-white">
    <a href="/" class="flex items-center space-x-3">
        <span class="sr-only">Juverion</span>
        <Logo />
    </a>
    <button
        data-collapse-toggle="toggleNavbar"
        type="button"
        class="text-bayern-light focus:text-bayern-dark hover:text-bayern-dark inline-flex items-center p-2 w-10 h-10 justify-center text-sm rounded-lg md:hidden">
        <Icon name="mdi:format-align-justify" class="w-5 h-5" />
    </button>
    <div class="hidden w-full md:block md:w-auto" id="toggleNavbar">
        <ul class="flex flex-col font-medium mt-4 p-4 md:p-0 md:mt-0 md:space-x-8 md:flex-row">
            <li>
                <a href="/" class="block py-2 px-3 text-bayern-light hover:text-bayern-dark">Home</a>
            </li>
            <li>
                <a href="/services" class="block py-2 px-3 text-bayern-light hover:text-bayern-dark">Services</a>
            </li>
            <li>
                <a href="/company" class="block py-2 px-3 text-bayern-light hover:text-bayern-dark">Company</a>
            </li>
        </ul>
    </div>
</nav>