---
import { Icon } from 'astro-icon/components';
import Logo from './Logo.astro';
---

<nav class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4 bg-white">
    <a href="/" class="flex items-center space-x-3">
        <span class="sr-only">Juverion</span>
        <Logo />
    </a>
    <button
        data-collapse-toggle="toggleNavbar"
        type="button"
        class="text-bayern-light focus:text-bayern-dark hover:text-bayern-dark inline-flex items-center p-2 w-10 h-10 justify-center text-sm rounded-lg md:hidden">
        <Icon name="mdi:format-align-justify" class="w-5 h-5" />
    </button>
    <div class="hidden w-full md:block md:w-auto" id="toggleNavbar">
        <ul class="flex flex-col font-medium mt-4 p-4 md:p-0 md:mt-0 md:space-x-8 md:flex-row">
            <li>
                <a href="/" class="block py-2 px-3 text-bayern-light hover:text-bayern-dark">Home</a>
            </li>
            <li>
                <a href="/services" class="block py-2 px-3 text-bayern-light hover:text-bayern-dark">Services</a>
            </li>
            <li>
                <button data-dropdown-toggle="projectsDropdown" class="flex items-center justify-between w-full py-2 px-3 text-bayern-light hover:text-bayern-dark">
                    Projects
                    <Icon name="mdi:menu-down" class="w-7 h-7" />
                </button>
                <div id="projectsDropdown" class="z-10 hidden font-normal bg-white divide-y divide-gray-100 rounded-lg shadow w-44">
                    <ul class="py-2 text-sm text-gray-700 dark:text-gray-400">
                        <li>
                            <a href="https://lohen.eu" rel="external" target="_blank" class="block px-4 py-2 hover:text-blue-500">Lohen</a>
                        </li>
                        <li>
                            <a href="https://arzival.com" rel="external" target="_blank" class="block px-4 py-2 hover:text-blue-500">Arzival</a>
                        </li>
                        <li>
                            <a href="https://emmalinux.github.io" rel="external" target="_blank" class="block px-4 py-2 hover:text-blue-500">EmmaLinux</a>
                        </li>
                    </ul>
                </div>
            </li>
            <li>
                <a href="/company" class="block py-2 px-3 text-bayern-light hover:text-bayern-dark">Company</a>
            </li>
        </ul>
    </div>
</nav>