---
import { Image } from 'astro:assets'
import Layout from '../layouts/Layout.astro'
import Map from '../components/Map'

import iconImg from '../assets/icon.svg';
import sapLogo from '../assets/partners/sap.svg';
import qtLogo from '../assets/partners/qt.svg';
import suseLogo from '../assets/partners/suse.svg';
import vectorLogo from '../assets/partners/vector.svg';

import 'leaflet/dist/leaflet.css';
---

<Layout title="Company">
    <section class="mx-auto mb-20 max-w-4xl">
        <div class="text-center text-zinc-800">
            <Image 
                src={iconImg} 
                alt="Services"  
                width={100} 
                height={75} 
                class="block mb-2 mx-auto max-w-full" 
            />
            <h1 class="text-4xl lg:text-5xl font-bold">The Company</h1>
            <h2 class="text-xl font-medium mt-5">
                StyriaIT formely Quattor are provides <strong>end-to-end</strong> software solutions for your bussines needs and
                our vision is to become the go-to "Solutions Company" for businesses facing complex software solutions
                based on latest and modern <strong>open-source</strong> technologies.
            </h2>
        </div>
    </section>
    <section class="mx-auto mb-20 max-w-6xl">
        <div class="grid md:grid-cols-2 gap-10">
            <div>
                <h2 class="mb-5 text-xl leading-relaxed">Unter den Linden 40, 10117 Berlin, Germany</h2>
                <Map client:only />
            </div>
            <div>
                <h2 class="mb-5 text-xl leading-relaxed">Have something to say? Fill up the form or send email.</h2>
                <form action="https://api.web3forms.com/submit" method="POST" novalidate>
                    <input type="hidden" name="access_key" value="YOUR_ACCESS_KEY_HERE" />
                    <div class="mb-5">
                        <input
                            type="text"
                            placeholder="Full Name"
                            required
                            class="w-11/12 px-4 py-3 border-2 placeholder:text-gray-800 rounded-md outline-none focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"
                            name="name"
                        />
                    </div>
                    <div class="mb-5">
                        <input
                            type="email"
                            placeholder="Email Address"
                            name="email"
                            required
                            class="w-11/12 px-4 py-3 border-2 placeholder:text-gray-800 rounded-md outline-none focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"
                        />
                    </div>
                    <div class="mb-3">
                        <textarea
                            name="message"
                            required
                            placeholder="Your Message"
                            class="w-11/12 px-4 py-3 border-2 placeholder:text-gray-800 rounded-md outline-none h-36 focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"
                        />
                    </div>
                    <button type="submit" class="px-5 py-2.5 rounded text-center transition ring-gray-200 border-2 border-black hover:bg-black text-black hover:text-white">
                        Send Message
                    </button>
                </form>
            </div>
        </div>
    </section>
    <section class="mx-auto mb-20 max-w-6xl">
        <div class="text-center text-4xl lg:text-5xl font-bold">
            <h1 class="mb-5">Our partners</h1>
            <div class="flex flex-col md:flex-row gap-8 items-center justify-center">
                <Image src={sapLogo} width="100" height="50" alt="SAP logo" />
                <Image src={qtLogo} width="100" height="50" alt="Qt logo" />
                <Image src={suseLogo} width="100" height="50" alt="SUSE logo" />
                <Image src={vectorLogo} width="200" height="50" alt="Vector logo" />
            </div>
        </div>
    </section>
</Layout>