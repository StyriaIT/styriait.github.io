---
import { Image } from 'astro:assets'

import Layout from '../layouts/Layout.astro'

import Map from '../components/Map'
import Contact from '../components/Contact.astro';

import iconImg from '../assets/icon.svg';
import sapLogo from '../assets/partners/sap.svg';
import qtLogo from '../assets/partners/qt.svg';
import suseLogo from '../assets/partners/suse.svg';
import vectorLogo from '../assets/partners/vector.svg';
---

<Layout title="The Company">
    <section class="mx-auto mb-20 max-w-4xl">
        <div class="text-center text-zinc-800">
            <Image 
                src={iconImg} 
                alt="company"
                width={100} 
                height={75} 
                class="block mb-2 mx-auto max-w-full" 
            />
            <h1 class="text-4xl lg:text-5xl font-bold">The Company</h1>
            <h2 class="text-xl font-medium mt-5 leading-relaxed">
                <strong>Juverion</strong> are provides <strong>end-to-end</strong> software solutions for your bussines needs and
                our vision is to become the go-to "Solutions Company" for businesses facing complex software solutions
                based on latest and modern <strong>open-source</strong> technologies.
            </h2>
        </div>
    </section>
    <section class="mx-auto mb-20 max-w-6xl">
        <div class="grid md:grid-cols-3 gap-5">
            <div class="min-h-96">
                <h2 class="mb-5 text-xl leading-relaxed">Unter den Linden 40, 10117 Berlin, Germany</h2>
                <Map 
                    center={[52.5172077, 13.3833228]} 
                    position={[52.51723056767026, 13.386262468175785]} 
                    client:only
                />
            </div>
            <div class="min-h-96">
                <h2 class="mb-5 text-xl leading-relaxed">Dieffenbachstra√üe 73, 10967 Berlin, Germany</h2>
                <Map 
                    center={[52.4939737, 13.4103292]} 
                    position={[52.49406680112912, 13.411804420155947]}
                    client:only
                />
            </div>
            <div class="min-h-96">
                <h2 class="mb-5 text-xl leading-relaxed">Via Vittorio Veneto, 18, 20091 Bresso MI, Italy</h2>
                <Map 
                    center={[45.5405785, 9.1866757]} 
                    position={[45.54074009026515, 9.189293511660042]}
                    client:only
                />
            </div>
        </div>

        <div class="mx-auto max-w-3xl text-center">
            <h2 class="mt-20 mb-5 text-2xl leading-relaxed">Have something to say? Fill up the form or send email.</h2>
            <Contact />
        </div>
    </div>
</section>
